			:javascript
				$(document).ready(function(){
					$(".tweet").tweet({
						username: "thehawk",
						join_text: "auto",
						avatar_size: 26,
						count: 5,
						auto_join_text_default: "",
						auto_join_text_ed: "",
						auto_join_text_ing: "",
						auto_join_text_reply: "",
						auto_join_text_url: "",
						loading_text: "loading tweets..."
					});
				});
