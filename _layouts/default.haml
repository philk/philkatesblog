!!! strict
%html{html_attrs}
	%head
		%title Still Learning...
		%link{:rel => "stylesheet", :type => "text/css", :href => "/stylesheets/ie.css"}
		%link{:rel => "stylesheet", :type => "text/css", :href => "/stylesheets/media.css"}
		%link{:rel => "stylesheet", :type => "text/css", :href => "/stylesheets/screen.css"}
		%link{:rel => "stylesheet", :type => "text/css", :href => "/stylesheets/styles.css"}
		%script{:src => '/js/jquery-1.3.2.min.js', :type => 'text/javascript'}
		%script{:src => '/js/jquery.tweet.js', :type => 'text/javascript'}
		:javascript
			$(document).ready(function(){
				$(".tweet").tweet({
					username: "thehawk",
					join_text: "auto",
					avatar_size: 26,
					count: 5,
					auto_join_text_default: "",
					auto_join_text_ed: "",
					auto_join_text_ing: "",
					auto_join_text_reply: "",
					auto_join_text_url: "",
					loading_text: "loading tweets..."
				});
			});
	%body
		#container
			#header
				%h1 Still Learning...
				%h4 I'm not sure what I'm good at yet.
			#content= content
			#sidebar
				%h1 Phil Kates
				%a{:href => "http://twitter.com/thehawk"}
					%img{:src => '/img/twitter_logo_s.png'}
				.tweet